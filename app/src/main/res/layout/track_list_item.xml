<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparentColor">

    <ImageView
        android:id="@+id/track_list_item_cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/alert_dark_frame"
        style="@style/TrackListItemCover" />

    <TextView
        android:id="@+id/track_list_item_title"
        android:text="@string/default_track_title"
        app:layout_constraintStart_toEndOf="@+id/track_list_item_cover"
        app:layout_constraintTop_toTopOf="@+id/track_list_item_cover"
        style="@style/TrackListItemTitle" />

    <TextView
        android:id="@+id/track_list_item_author"
        android:text="@string/default_author"
        app:layout_constraintStart_toEndOf="@+id/track_list_item_cover"
        app:layout_constraintTop_toBottomOf="@+id/track_list_item_title"
        tools:ignore="SmallSp"
        style="@style/TrackListItemAuthor" />

</androidx.constraintlayout.widget.ConstraintLayout>