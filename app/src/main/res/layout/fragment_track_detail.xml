<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DefaultFragment">


    <ImageView
        android:id="@+id/fragment_track_detail_cover"
        style="@style/TrackDetailCover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gachi" />

    <TextView
        android:id="@+id/fragment_track_detail_title"
        style="@style/TrackDetailPrimaryText"
        android:text="@string/default_track_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_track_detail_cover" />

    <TextView
        android:id="@+id/fragment_track_detail_author"
        style="@style/TrackDetailSecondaryText"
        android:text="@string/default_author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_track_detail_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_track_detail_navigation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/normalTopMargin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_track_detail_author">

        <ImageView
            android:id="@+id/fragment_track_detail_navigation_previous"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/skip_previous_24px" />

        <ImageView
            android:id="@+id/fragment_track_detail_navigation_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/play_arrow_24px" />

        <ImageView
            android:id="@+id/fragment_track_detail_navigation_pause"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/stop_24px"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/fragment_track_detail_navigation_next"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginEnd="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/skip_next_24px" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>