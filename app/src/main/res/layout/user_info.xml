<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
    <ImageView
        android:id="@+id/userDetailItemAvatar"
        android:layout_width="255dp"
        android:layout_height="251dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/userDetailItemName"
        android:layout_width="163dp"
        android:layout_height="40dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/aladin"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userDetailItemAvatar" />

    <TextView
        android:id="@+id/userDetailItemInfo"
        android:layout_width="271dp"
        android:layout_height="327dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/advent_pro_semibold"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userDetailItemName" />


</androidx.constraintlayout.widget.ConstraintLayout>